<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainBlockText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">2sp</item>
        <item name="android:paddingEnd">10sp</item>

    </style>

    <style name="MainBlockSum">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green_100</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">1sp</item>
        <item name="android:paddingEnd">18sp</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">2sp</item>
        <item name="android:text">0</item>

    </style>


    <style name="SpendPeriodText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="faqAllText">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="faqTextAnswer" parent="faqAllText">
        <item name="android:layout_marginStart">19dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="faqTextQt" parent="faqAllText">
        <item name="android:textStyle">bold</item>
    </style>
</resources>